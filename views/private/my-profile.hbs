<div class="profile-container">
    <div class="profile-data">
        <div class="profile-image">
            {{#each user}}
            <img src="{{userImage}}" alt="" width="250" height="250">
            {{/each}}
            <a href="/my-profile/{{user._id}}/edit-image" class="profile-edit-button">Editar foto</a>
        </div>
        <div class="profile-info">
            {{#each user}}
            <h1 class="profile-info-item">{{name}}</h1>
            <h1 class="profile-info-item">{{email}}</h1>
            <h1 class="profile-info-item">{{phoneNumber}}</h1>
            <h1 class="profile-info-item">{{address.road}}</h1>
            <h1 class="profile-info-item">{{address.number}}</h1>
            <h1 class="profile-info-item">{{address.complement}}</h1>
            <h1 class="profile-info-item">{{address.cep}}</h1>
            <h1 class="profile-info-item">{{address.city}}</h1>
            <h1 class="profile-info-item">{{address.state}}</h1>
            {{/each}}
        </div>
            <a href="/my-profile/{{user._id}}/edit" target="_blank">Editar perfil</a>
    </div>

    <div class="profile-products">
        <div class="profile-products-container">
            <a href="/my-profile/pending"><img src="https://res.cloudinary.com/escambalapp/image/upload/v1570646008/escambal-app-folder/css.images/goods_rjqrmp.png" class="profile-products-img" alt=""></a>
            <h1><a href="/my-profile/pending" class="profile-products-text">Produtos <br>pendentes</a></h1>
        </div>
        <div class="profile-products-container">
            <a href="/my-profile/my-products"><img src="https://res.cloudinary.com/escambalapp/image/upload/v1570646009/escambal-app-folder/css.images/box_mh4fvm.png" class="profile-products-img" alt=""></a>
            <h1><a href="/my-profile/my-products" class="profile-products-text">Meus<br>produtos</a></h1>
        </div>
        <div class="profile-products-container">
            <a href="/my-profile/my-offers"><img src="https://res.cloudinary.com/escambalapp/image/upload/v1570651053/escambal-app-folder/css.images/gift_khckgy.png" class="profile-products-img"  alt=""></a>
            <h1><a href="/my-profile/my-offers" class="profile-products-text">Ofertas<br>recebidas</a></h1>
        </div>
    </div>
</div>