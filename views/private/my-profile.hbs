<div class="profile__container">
    <div class="profile__content">
        <div class="profile__image">
            <a href="/my-profile/{{user._id}}/edit-image"><img src="{{user.userImage}}" alt="{{user.name}}"></a>
        </div>
        <div class="profile__info">
            <span class="profile__info-item">{{user.name}}</span>
            <span class="profile__info-item">{{user.email}}</span>
            <span class="profile__info-item">{{user.phoneNumber}}</span>
            <a href="/my-profile/{{user._id}}/edit" class="profile-edit-button">Editar perfil</a>
        </div>
    </div>

    <div class="profile__products">
        <div class="profile__products-container">
            <a href="/my-profile/pending"><img
                    src="https://res.cloudinary.com/escambalapp/image/upload/v1570646008/escambal-app-folder/css.images/goods_rjqrmp.png"
                    class="profile__products-img" alt=""></a>
            <span><a href="/my-profile/pending" class="profile__products-text">Produtos <br>pendentes</a></span>
        </div>
        <div class="profile__products-container">
            <a href="/my-profile/my-products"><img
                    src="https://res.cloudinary.com/escambalapp/image/upload/v1570646009/escambal-app-folder/css.images/box_mh4fvm.png"
                    class="profile__products-img" alt=""></a>
            <span><a href="/my-profile/my-products" class="profile__products-text">Meus<br>produtos</a></span>
        </div>
        <div class="profile__products-container">
            <a href="/my-profile/my-offers"><img
                    src="https://res.cloudinary.com/escambalapp/image/upload/v1570651053/escambal-app-folder/css.images/gift_khckgy.png"
                    class="profile__products-img" alt=""></a>
            <span><a href="/my-profile/my-offers" class="profile__products-text">Ofertas<br>recebidas</a></span>
        </div>
    </div>
</div>