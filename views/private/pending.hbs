<div class="pending-products__page">

    <h1>Produtos pendentes</h1>
    <div class="pending-products__container">

        {{#each filteredOrders}}
        <h2 class="product-card-text">Você ofertou {{myProducts.[0].name}} por {{userProducts.[0].name}}</h2>
        <div class="pending-products__content">

            <div class="card pending-products__card">
                <img class="card__image pending-products__image" src="{{myProducts.[0].imageUrl}}"
                    alt="{{myProducts.[0].name}}" height="200" width="200">
                <div class="card__body">
                    <span class="card__title pending-products__title"><a href="/my-products/{{myProducts.[0]._id}}"
                            class="card__text ">{{myProducts.[0].name}}</a></span>
                </div>
            </div>

            <div class="card pending-products__card">
                <img class="card__image pending-products__image" src="{{userProducts.[0].imageUrl}}"
                    alt="{{userProducts.[0].name}}" height="200" width="200">
                <div class="card__body">
                    <span class="card__title pending-products__title"><a href="/products/{{userProducts.[0]._id}}"
                            class="card__text">{{userProducts.[0].name}}</a></span>
                </div>
            </div>
            <button type="button" class="btn btn-secondary btn-lg btn-block"><a href="/{{_id}}/cancel">Cancelar
                    Oferta</a></button>
        </div>

        {{/each}}

    </div>
</div>