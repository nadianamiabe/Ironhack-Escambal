<div class="my-offers__container">
    <h2 class="product-card-text">Ofertas</h2>

    {{#each filteredOrders}}

    <div class="my-offers__content">

        <h2 class="product-card-text">{{myUser.name}} quer ofertar {{myProducts.[0].name}} por
            {{userProducts.[0].name}}</a></h2>

        <div class="my-offers__cards">

            <div class="card pending-products__card">
                <img class="card__image pending-products__image" src="{{myProducts.[0].imageUrl}}"
                    alt="{{myProducts.[0].name}}" height="200" width="200">
                <div class="card__body">
                    <span class="card__title pending-products__title"><a href="/my-products/{{myProducts.[0]._id}}"
                            class="card__text ">{{myProducts.[0].name}}</a></span>
                </div>
            </div>

            <div class="card pending-products__card">
                <img class="card__image pending-products__image" src="{{userProducts.[0].imageUrl}}"
                    alt="{{userProducts.[0].name}}" height="200" width="200">
                <div class="card__body">
                    <span class="card__title pending-products__title"><a href="/my-products/{{userProducts.[0]._id}}"
                            class="card__text ">{{userProducts.[0].name}}</a></span>
                </div>
            </div>
        </div>



        <div class="card__button-container">

            <button type="button" class="btn btn-secondary"><a href="/{{_id}}/accept" />Aceitar</a></button>
            <button type="button" class="btn btn-danger"><a href="/{{_id}}/decline" />Recusar</a></button>
        </div>
    </div>



    {{/each}}