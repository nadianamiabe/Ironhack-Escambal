<div class="my-products__page">
    <button type="button" class="btn btn-secondary btn-lg btn-block"><a href="/my-products/insert-product">Adicione um
            produto</a></button>

    <div class="my-products__container">

        <div class="all-products__container">
            {{#each filteredProducts}}
            <div class="card">
                <img class="card__image" src="{{imageUrl}}" alt="{{name}}" height="200" width="200">
                <div class="card__body">
                    <h1 class="card__title"><a href="/my-products/{{_id}}" class="card__text">{{name}}</a></h1>
                    <p class="card__text card__description">{{description}}</p>
                </div>
                <div class="card__button-container">

                    <button type="button" class="btn btn-secondary"><a
                            href="/my-products/{{_id}}/edit" />Editar</a></button>
                    <button type="button" class="btn btn-danger"><a
                            href="/my-products/{{_id}}/delete" />Deletar</a></button>
                </div>
            </div>
            {{/each}}
        </div>
    </div>
</div>